@model IEnumerable<test.ViewModels.PictureViewModel>
@{
    ViewBag.Title = "UserPictures";
}

<h2>UserPictures</h2>
<div class ="pictures">
    <div id ="scrolList"> 
    @foreach (var item in Model) {
        <div class="picture">
                      
            @Html.Partial("_Picture", item)
                        
        </div>
        
        
    }
        </div> 
</div>

<div id="loading"><img src='@Url.Content("~/Content/loading_spinner.gif")'></div>
 
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script type="text/javascript">
    $(function () {

        $('div#loading').hide();

        var page = 0;
        var _inCallback = false;
        function loadItems() {
            if (page > -1 && !_inCallback) {
                _inCallback = true;
                page++;
                $('div#loading').show();

                $.ajax({
                    type: 'GET',
                    url: '/Picture/GetPagePictures?page=' + page + "&userId=" +@ViewBag.userId,
                    success: function (data, textstatus) {
                        if (data != '') {
                            $("#scrolList").append(data);
                        }
                        else {
                            page = -1;
                        }
                        _inCallback = false;
                        $("div#loading").hide();
                    }
                });
            }
        }
        // обработка события скроллинга
        $(window).scroll(function () {
            if ($(window).scrollTop() == $(document).height() - $(window).height()) {

                loadItems();
            }
        });
    })
</script>