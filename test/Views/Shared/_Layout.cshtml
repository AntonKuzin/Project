@using Newtonsoft.Json
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
    <body>
        
        <header>
            <div class = "header">
                <div class="content">
                    <div class="logo">
                        <a href="/">
                            <img src="/Pictures/logo.png" style="height: 100px"/>
                        </a>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="user_panel">
                            <ul>
                                <li>@User.Identity.Name</li>

                                <li>@Html.ActionLink("Выход", "LogOff", "Account")</li>
                            </ul>
                        </div>
                        
                        @Html.ActionLink("Загрузить картинку","Create","Picture")
                        if (User.IsInRole("admin"))
                        {
                            <div class="admin_panel">
                                <h3>У Вас есть права администратора.</h3>
                                @Html.ActionLink("Администрование", "Index", "Account")
                            </div>
                        }
            
                    }
                    else
                    {
                        <div class="user_panel">
                            <ul>
                                <li>@Html.ActionLink("Вход", "Login", "Account")</li>
                                <li>@Html.ActionLink("Регистрация", "Register", "Account")</li>
                            </ul>
                        </div>
                        
                    }
                    
                </div> 
            </div>
        </header>

        <div class="content">
            <div class="body">

                    @RenderSection("featured", required: false)
                    @RenderBody()

               
            </div>
        </div>

        <footer>
            <div class ="footer">
                <div class="content">
                    <p>&copy; @DateTime.Now.Year wow, such album, very progressive</p>
                </div>
            </div> 
        </footer>
        

    

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
